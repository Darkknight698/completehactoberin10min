//ALGORITHM

step 1. Start
step 2. Read the number n
step 3. [Initialize]
        i=1, fact=1
step 4. Repeat step 4 through 6 until i=n
step 5. fact=fact*i
step 6. i=i+1
step 7. Print fact
step 8. Stop

//PROGRAM

#include <iostream> 
using namespace std;

unsigned int factorial(unsigned int n) 
{ 
    if (n == 0) 
        return 1; 
    return n * factorial(n - 1); 
} 

int main() 
{ 
    int num = 5; 
    cout << "Factorial of "
         << num << " is " << factorial(num) << endl; 
    return 0; 
} 
