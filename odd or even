#include <stdio.h>
int main()
{
    int number;
    printf("Enter an integer: ");
    scanf("%d", &number)
    if(number % 2 == 0)       // number is divisible by 2
    
        printf("%d is even ", number);  // entered number is even
    else
        printf("%d is odd ", number);  // entered number is odd
    return 0;
}
