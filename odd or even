#include <stdio.h>
int main()
{
//intializing variable number
int number;
    
    //taking input from user
    
    printf("Enter an integer: ");
    scanf("%d", &number);
    
    //checking for odd or even
    
    if(number % 2 == 0)
        printf("%d is even ", number);
    else
        printf("%d is odd ", number);
    return 0;
}
