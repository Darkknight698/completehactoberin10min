#include <stdio.h>
int main()
{
    int number;
    print("Enter an integer: ");       # this command is youe for input the number 
    scanf("%d", &number) 
    if(number % 2 == 0)                 # in this command we chek the number 
        printf("%d is even ", number);   
    else
        printf("%d is odd ", number);
    return 0;
}
