#include <stdio.h>
int main()
{
    //Define Variable
    int number;
    
    printf("Enter an integer: ");
    scanf("%d", &number)
    //Check if number is divisible by 2
    if(number % 2 == 0)
        printf("%d is even ", number);
    else
        printf("%d is odd ", number);
    return 0;
}
