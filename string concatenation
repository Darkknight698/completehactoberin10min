#include<stdio.h>
int main()
{
    char a1[200], a2[200], m, n;
    printf("Enter first string: ");
    scanf("%s", a1);
    printf("Enter second string: ");
    scanf("%s", a2);
    // calculate the length of string a1
    // and store it in m
    for(m = 0; a1[m] != '\0'; ++m);
    for(n = 0; a2[n] != '\0'; ++n, ++m)
    {
        a1[m] = a2[n];
    }
    a1[m] = '\0';
    printf("After concatenation: %s", a1);
    return 0;
}
