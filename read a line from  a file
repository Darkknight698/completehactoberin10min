#include <stdio.h>
#include <stdlib.h> 
int main()

{
    char c[1000];

    FILE *fptr

    if ((fptr = fopen("program.txt", "r")) == NULL)
    {
        printf("Error! opening file");
  
        exit(1);         
    }
    // reads text until newline and also print the line from the file
    fscanf(fptr,"%[^\n]", c);
    printf("Data from the file:\n%s", c);
    close(fptr)
    
   
}
