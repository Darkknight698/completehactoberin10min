#include <stdio.h>
#include <stdlib.h>  /* For exit() function */
int main()
{
   char s[1000];
   FILE *fptr;
   ptr = fopen("program.txt", "w");
   if(fptr == NULL)
   {
      printf("Sorry its Error!");
      exit(1);
   }
   
   printf("Enter a sentence of your choice:\n");
   gets(s);
   printf(fptr,"%s", s);
   close(fptr);

}
